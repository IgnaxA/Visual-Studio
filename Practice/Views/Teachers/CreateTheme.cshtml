@model CreateThemeViewModel


<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Floating Label</h6>
            <form asp-controller="Teachers" asp-action="CreateTheme" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="floatingInput" placeholder="Введите формулировку темы" asp-for="ThemeFormulation">
                    <label for="floatingInput" asp-for="ThemeFormulation"></label>
                </div>
                <button class="btn btn-sm btn-primary">Сохранить</button>
                <button class="btn btn-sm btn-primary" asp-controller="Teachers" asp-action="TeachersList">Отменить</button>
            </form>
            
    </div>
</div>
