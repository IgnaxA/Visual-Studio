<Window x:Class="Paint.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="О программе" Height="343" Width="400">
        
    <Grid Height="401" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" MinHeight="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Создатель: Игнат Панов" Grid.Row="0"></Label>
        <StackPanel Grid.Row="1" Background="LightGray">
            <Image Source="Images/Logo.png" Width="Auto" Height="Auto"/>
        </StackPanel>
        
        
    </Grid>
</Window>
