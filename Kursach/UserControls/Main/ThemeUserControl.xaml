<UserControl x:Class="Kursach.UserControls.Main.ThemeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kursach.UserControls.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="ThemeUserControlGrid">
        <TreeView x:Name="ThemesView" PreviewMouseRightButtonDown="ThemesView_OnPreviewMouseRightButtonDown" ContextMenuOpening="ThemesView_ContextMenuOpening" Background="Transparent">
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="AddNode" Header="Добавить" Click="AddNode_Click"/>
                    <MenuItem x:Name="DeleteNode" Header="Удалить" Click="DeleteNode_Click"/>
                    <MenuItem x:Name="RenameNode" Header="Изменить" Click="RenameNode_Click"/>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
    </Grid>
</UserControl>
