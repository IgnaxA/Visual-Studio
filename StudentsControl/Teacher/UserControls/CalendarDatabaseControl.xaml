<UserControl x:Class="StudentsControl.Teacher.UserControls.CalendarDatabaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentsControl.Teacher.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
            <Calendar x:Name="CalendarView" Grid.Column="0" SelectionMode="SingleDate" SelectedDatesChanged="CalendarView_SelectedDatesChanged"/>    
        </Viewbox>
        <TreeView x:Name="CurrentDayDeadlines" Grid.Column="1" Background="Transparent">
            
        </TreeView>
    </Grid>
</UserControl>
