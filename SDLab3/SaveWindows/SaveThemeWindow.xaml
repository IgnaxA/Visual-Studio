<Window x:Class="SDLab3.SaveWindows.SaveThemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDLab3.SaveWindows"
        mc:Ignorable="d"
        Title="Управление записью о теме" Height="175" Width="320"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="InfoLabel" Grid.Row="0" Content="Введите данные о теме:"/>
        <DockPanel Grid.Row="1" Width="Auto" >
            <Label Content="Название темы:" VerticalContentAlignment="Center"/>
            <TextBox x:Name="ThemeFormulation" Width="200" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0, 0, 5, 0"/>
        </DockPanel>
        <Button Grid.Row="2" Height="30" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0, 0, 10, 10" Content="Сохранить" Click="AddTheme_Click"/>
    </Grid>
</Window>
